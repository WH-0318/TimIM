<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_login_header"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="注册账户"
        android:textSize="17dp"
        android:textColor="#1D2129"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="38dp"
        android:orientation="horizontal"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">
        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColorHint="#A9AEB8"
            android:maxLength="20"
            android:singleLine="true" />
    </com.allen.library.shape.ShapeLinearLayout>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_code"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ll_account"
        app:layout_constraintEnd_toEndOf="@id/ll_account"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_account">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:hint="请输入验证码"
            android:textColorHint="#A9AEB8"
            android:maxLength="6"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:inputType="number"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="2dp"
            android:text="获取验证码"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary" />
    </com.allen.library.shape.ShapeLinearLayout>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ll_account"
        app:layout_constraintEnd_toEndOf="@id/ll_account"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_code">
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:hint="请输入6-16位登录密码"
            android:textColorHint="#A9AEB8"
            android:maxLength="16"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:inputType="textPassword"
            android:background="@color/transparent"/>
        <ImageView
            android:id="@+id/iv_visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:src="@drawable/img_pwd_visible"/>
    </com.allen.library.shape.ShapeLinearLayout>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_confirm_pwd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ll_account"
        app:layout_constraintEnd_toEndOf="@id/ll_account"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_pwd">
        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:hint="请确认6-16位登录密码"
            android:textColorHint="#A9AEB8"
            android:maxLength="16"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:inputType="textPassword"
            android:background="@color/transparent"/>
        <ImageView
            android:id="@+id/iv_confirm_visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:src="@drawable/img_pwd_visible"/>
    </com.allen.library.shape.ShapeLinearLayout>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_invite_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="38dp"
        android:orientation="horizontal"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_confirm_pwd">
        <EditText
            android:id="@+id/et_invite_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:background="@color/transparent"
            android:hint="请输入邀请码（必填）"
            android:inputType="number"
            android:textColorHint="#A9AEB8"
            android:maxLength="20"
            android:singleLine="true" />
    </com.allen.library.shape.ShapeLinearLayout>

    <com.allen.library.shape.ShapeTextView
        android:id="@+id/tv_register"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:alpha="0.3"
        app:shapeSolidColor="@color/colorPrimary"
        app:shapeCornersRadius="22dp"
        app:layout_constraintTop_toBottomOf="@id/ll_invite_code"
        app:layout_constraintStart_toStartOf="@id/ll_account"
        app:layout_constraintEnd_toEndOf="@id/ll_account"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="我有账号，立即登录"
        android:textColor="#6B7785"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"/>
        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="我已阅读并同意《隐私政策》和《用户协议》"
            android:textSize="13dp"
            android:textColor="#6B7785"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
