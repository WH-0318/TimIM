<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_login_header"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:textSize="17dp"
        android:textColor="#1D2129"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:src="@drawable/img_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_header" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:bottom="@id/iv_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_app_name"/>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="47dp"
        android:layout_marginHorizontal="38dp"
        android:orientation="horizontal"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_header">
        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:background="@color/transparent"
            android:hint="请输入账号"
            android:inputType="number"
            android:textColorHint="#A9AEB8"
            android:maxLength="20"
            android:textCursorDrawable="@drawable/common_edit_cursor"
            android:singleLine="true" />
    </com.allen.library.shape.ShapeLinearLayout>

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ll_account"
        app:layout_constraintEnd_toEndOf="@id/ll_account"
        app:shapeSolidColor="@color/white"
        app:shapeCornersRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_account">
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:hint="请输入账号密码"
            android:textColorHint="#A9AEB8"
            android:maxLength="20"
            android:textSize="17dp"
            android:textColor="#1D2129"
            android:inputType="textPassword"
            android:background="@color/transparent"/>
        <ImageView
            android:id="@+id/iv_visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:src="@drawable/img_pwd_visible"/>
    </com.allen.library.shape.ShapeLinearLayout>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="忘记密码?"
        android:textSize="14sp"
        android:textColor="#6B7785"
        app:layout_constraintTop_toBottomOf="@id/ll_pwd"
        app:layout_constraintEnd_toEndOf="@id/ll_pwd"/>

    <com.allen.library.shape.ShapeTextView
        android:id="@+id/tv_login"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/button_login"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:alpha="0.3"
        app:shapeSolidColor="@color/colorPrimary"
        app:shapeCornersRadius="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forget_pwd"
        app:layout_constraintStart_toStartOf="@id/ll_account"
        app:layout_constraintEnd_toEndOf="@id/ll_account"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="#6B7785"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"/>
        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="我已阅读并同意《隐私政策》和《用户协议》"
            android:textSize="13dp"
            android:textColor="#6B7785"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
